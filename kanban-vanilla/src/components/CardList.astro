---
import type { BoardList, UsersList } from '../lib/api';
import Card from './Card.astro';

interface Props {
  list: BoardList;
  users: UsersList;
}

const { list, users } = Astro.props;
---

<article class="card bg-base-200 dark:bg-base-300 min-w-[20rem] shadow-xl">
  <div class="card-body gap-4">
    <header class="flex items-center justify-between">
      <h2 class="card-title text-base-content">{list.title}</h2>
      <div class="badge badge-primary badge-outline badge-lg shadow">
        {list.cards.length} cards
      </div>
    </header>

    <div
      class="card-list min-h-[200px] transition-all duration-200 rounded-lg"
      data-list-id={list.id}
    >
      {list.cards.length === 0 ? (
        <div class="alert alert-info text-sm">
          <span>No cards yet</span>
        </div>
      ) : (
        <div class="space-y-3">
          {list.cards.map((card) => (
            <Card card={card} users={users} />
          ))}
        </div>
      )}
    </div>
  </div>
</article>
