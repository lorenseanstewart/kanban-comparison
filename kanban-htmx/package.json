{
  "name": "kanban-htmx",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run build && wrangler pages dev dist --d1=DB --live-reload",
    "build": "astro build",
    "preview": "node server.mjs",
    "preview:astro": "astro preview",
    "astro": "astro",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 execute kanban-htmx-db --remote --file=drizzle/migrations/0000_calm_captain_britain.sql",
    "db:migrate:local": "wrangler d1 execute kanban-htmx-db --local --file=drizzle/migrations/0000_calm_captain_britain.sql",
    "db:push": "drizzle-kit push",
    "seed": "wrangler d1 execute kanban-htmx-db --remote --file=scripts/seed-d1.sql",
    "seed:local": "wrangler d1 execute kanban-htmx-db --local --file=scripts/seed-d1.sql",
    "setup": "npm run db:migrate:local && npm run seed:local",
    "pages:deploy": "npm run build && wrangler pages deploy dist"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.6",
    "@formkit/auto-animate": "^0.9.0",
    "@formkit/drag-and-drop": "^0.5.3",
    "@types/better-sqlite3": "^7.6.13",
    "astro": "^5.14.4",
    "better-sqlite3": "^12.4.1",
    "charts.css": "^1.2.0",
    "compression": "^1.8.1",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "sirv": "^3.0.2",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@astrojs/cloudflare": "^12.6.10",
    "@cloudflare/workers-types": "^4.20250605.0",
    "@tailwindcss/vite": "^4.1.7",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.3.0",
    "tailwindcss": "^4.1.7",
    "tsx": "^4.20.6",
    "wrangler": "^3.106.1"
  }
}
